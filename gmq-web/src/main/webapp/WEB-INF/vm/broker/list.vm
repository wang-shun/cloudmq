<div class="main-content">
    <ul class="nav nav-tabs">
        #foreach($cluster in $!tbodyData)
            #if($velocityCount==1)
                <li class="active"><a href="#$cluster.name" data-toggle="tab">$cluster.name</a></li>
            #else
                <li><a href="#$cluster.name" data-toggle="tab">$cluster.name</a></li>
            #end
        #end
    </ul>

    <div id="user" class="tab-content">
        #foreach($cluster in $!tbodyData)
            #if($velocityCount==1)
            <div class="tab-pane active in" id="$cluster.name">
            #else
            <div class="tab-pane fade" id="$cluster.name">
            #end
            <table class="table" class="tab-pane fade in active">
                <thead>
                <tr>
                    <th>BID</th>
                    <th>Addr</th>
                    <th>Version</th>
                    <th>InTotalYest</th>
                    <th>OutTotalYest</th>
                    <th>InTotalToday</th>
                    <th>OutTotalToday</th>
                    <th style="width: 3.5em;"></th>
                </tr>
                </thead>
                <tbody>
                    #foreach($broker in $!cluster.brokerList)
                    <tr>
                        <td>$!{broker.brokerID}</td>
                        <td>$!{broker.addr}</td>
                        <td>$!{broker.version}</td>
                        <td>$!{broker.inTotalToday}</td>
                        <td>$!{broker.outTotalTodtay}</td>
                        <td>$!{broker.inTotalYest}</td>
                        <td>$!{broker.outTotalYest}</td>
                        <td>
                            <a href="$root/user/saveOrUpdate.do?id=$!{user.id}"><i class="fa fa-pencil"></i></a>
                            <a href="javascript:void(0)" onclick="showModal($!{user.id})" role="button"
                               userid="$!{user.id}"
                               data-toggle="modal"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
        #end
    </div>

    </div>

    <script language="javascript">
        function add() {
            window.location.href = "saveOrUpdate.do";
        }

        function showModal(userId) {
            console.log("userId=" + userId);
            alert("userId=" + userId);
            $("#myModalBodySpan").text("userId=" + userId);
            $("#btnDelUser").attr("data-value", userId);
            $("#myModal").modal("show");
        }

        function delUser() {
            var id = $("#btnDelUser").attr("data-value");
            var data = new Object();
            data.id = Number(id);
            var returnUrl = "list.do";
            var ajaxHandler = new ajaxDataController("$root/user/delete.do", JSON.stringify(data), returnUrl, null, false, 'delete');
        }

    </script>
