#add()

<div class="main-content">

    <ul class="nav nav-tabs">
        <li class="active"><a href="#home" data-toggle="tab">Profile</a></li>
        <li><a href="#profile" data-toggle="tab">Password</a></li>
    </ul>

    <div class="row">
        <div class="col-md-4">
            <br>

            <div id="user" class="tab-content">
                <div class="tab-pane active in" id="home">
                    <form id="tab" name="user" action="$root/user/add.do" method="POST"
                          data-resultType="JSON">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="id" value="$" class="form-control" readonly>
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="userName" value="$" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Real Name</label>
                            <input type="text" name="realName" value="" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="text" name="password" value="" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" value="" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Mobile</label>
                            <input type="text" name="mobile" value="" class="form-control">
                        </div>
                        <div class="btn-toolbar list-toolbar">
                            <button class="btn btn-primary"
                                    onclick="$('form[name=userDemoUpdateForm]').submit()><i class=" fa fa-save
                            "></i> Save</button>
                            <a href="$root/user/list.do" data-toggle="modal" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>

                <div class="tab-pane fade" id="profile">

                    <form id="tab2">
                        <div class="form-group">
                            <label>New Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <div>
                            <button class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>