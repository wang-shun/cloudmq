<div class="main-content">
    <div class="btn-toolbar list-toolbar">
        <button class="btn btn-primary" onclick="add()"><i class="fa fa-plus"></i> New User</button>
        <div class="btn-group">
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>RealName</th>
            <th>UserName</th>
            <th>Mobile</th>
            <th>Email</th>
            <th style="width: 3.5em;"></th>
        </tr>
        </thead>
        <tbody>
            #foreach($user in $!tbodyData)
            <tr>
                <td>$!{user.id}</td>
                <td>$!{user.realName}</td>
                <td>$!{user.userName}</td>
                <td>$!{user.mobile}</td>
                <td>$!{user.email}</td>
                <td>
                    <a href="$root/user/saveOrUpdate.do?id=$!{user.id}"><i class="fa fa-pencil"></i></a>
                    <a href="javascript:void(0)" onclick="showModal($!{user.id})" role="button" userid="$!{user.id}"
                       data-toggle="modal"><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>
            #end
        </tbody>
    </table>

    <ul class="pagination">
        <li><a href="#">&laquo;</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">&raquo;</a></li>
    </ul>

    <div class="modal small fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                    <h3 id="myModalLabel">Delete Confirmation</h3>
                </div>
                <div class="modal-body">
                    <p class="error-text"><i class="fa fa-warning modal-icon"></i>Are you sure you want to delete
                        the user?<span id="myModalBodySpan"></span><br/>This cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
                    <button class="btn btn-danger" data-dismiss="modal" id="btnDelUser" data-value=""
                            onclick="delUser()">Delete
                    </button>
                </div>
            </div>
        </div>
    </div>


</div>

<script language="javascript">
    function add() {
        window.location.href = "saveOrUpdate.do";
    }

    function showModal(userId) {
        console.log("userId=" + userId);
        alert("userId=" + userId);
        $("#myModalBodySpan").text("userId=" + userId);
        $("#btnDelUser").attr("data-value", userId);
        $("#myModal").modal("show");
    }

    function delUser() {
        var id = $("#btnDelUser").attr("data-value");
        var data = new Object();
        data.id = Number(id);
        var returnUrl = "list.do";
        var ajaxHandler = new ajaxDataController("$root/user/delete.do", JSON.stringify(data), returnUrl, null, false, 'delete');
    }

</script>
