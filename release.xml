<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>gmq</id>
	<baseDirectory>gmq</baseDirectory>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>bin/*</include>
				<include>conf/*</include>
				<include>conf/*/*</include>
				<include>test/*</include>
				<include>benchmark/*</include>
				<include>issues/*</include>
				<include>wiki/*</include>
				<include>LICENSE.txt</include>
			</includes>
		</fileSet>
	</fileSets>


	<moduleSets>
		<moduleSet>
			<includes>
				<include>com.gome.coremq:gmq-broker</include>
				<include>com.gome.coremq:gmq-tools</include>
				<include>com.gome.coremq:gmq-api</include>
				<include>com.gome.coremq:gmq-namesrv</include>
				<include>com.gome.coremq:gmq-filtersrv</include>
				<include>com.gome.coremq:gmq-example</include>
				<include>com.gome.gmq:gmq-client</include>
			</includes>
			<binaries>
				<outputDirectory>lib/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib/</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
